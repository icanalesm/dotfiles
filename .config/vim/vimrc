" Pathogen
source ~/.vim/bundle/vim-pathogen/autoload/pathogen.vim
execute pathogen#infect('~/.vim/bundle/{}')

set nocompatible

filetype plugin on

syntax on

set backspace=indent,eol,start

set incsearch

set viminfo='50,<50,s50,/0,:0,h,n~/.config/vim/viminfo

" Plugin: Base16 Vim
"         (https://github.com/chriskempson/base16-vim)
"
if !empty($BASE16_THEME)
"	(see https://github.com/chriskempson/base16-vim#256-colorspace)
	let base16colorspace=256
	colorscheme $BASE16_THEME
endif

" Always show status line
set laststatus=2

" Show the cursor position
set ruler

set number
set relativenumber

" Highlight current line
set cursorline
" Format current line number
" (must be after colorscheme because base16-vim resets the syntax)
hi CursorLineNr cterm=bold

" Open splits at the bottom and right
set splitbelow splitright
" Split navigation
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

" Plugin: vimtex
"         (https://github.com/lervag/vimtex)
"
" Change default .tex file type from 'plaintex' to 'tex'
" (see https://github.com/lervag/vimtex/wiki/introduction#comment-on-internal-tex-plugin)
let g:tex_flavor='latex'
