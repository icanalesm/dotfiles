#!/bin/bash

case $GPU in
	dGPU) X11_CONF_DISPLAY="display-nvidia-prime.conf" ;;
	*)    X11_CONF_DISPLAY="/dev/null" ;;
esac

if [ ! "$HOME/.config/X11/xorg/20-display.conf" -ef "$HOME/.config/X11/xorg/$X11_CONF_DISPLAY" ]; then
	ln -sf "$X11_CONF_DISPLAY" "$HOME/.config/X11/xorg/20-display.conf"
fi

startx

